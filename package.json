{
  "name": "litm-player",
  "version": "1.0.0",
  "description": "A locally hosted, web-accessible game server for running Legend in the Mist roleplaying game sessions",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "build": "echo 'No build step required for vanilla JS'",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": [
    "rpg",
    "game-server",
    "websocket",
    "real-time",
    "legend-in-the-mist",
    "tabletop"
  ],
  "author": "LitMPlayer Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "nodemonConfig": {
    "ignore": ["data/*", "*.json"],
    "watch": ["src/"],
    "ext": "js,json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikerees/litm-player.git"
  },
  "bugs": {
    "url": "https://github.com/mikerees/litm-player/issues"
  },
  "homepage": "https://github.com/mikerees/litm-player#readme"
}
